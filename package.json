    "release": "conc npm:release:*"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "use-sync-external-store": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-cljs-test": "^0.1.0",
    "sass": "^1.57.1",
    "shadow-cljs": "^2.27.1"
  }
}
